# максимальная разность в массиве
# j < i
# l[i] - l[j] -> max

l = [90, 100, -50, 10, 50, -100, -90]
jbest = 0
ibest = 1
imin = 0

# первый способ
for i in range(1, len(l)):
  for j in range(0, i):
    if l[i] - l [j] < l[ibest] - l[jbest]:
      ibest = i 
      jbest = j

# второй способ
for i in range(1, len(l)):
if l[i-1] < l[min]:
  imin = i - 1
if l[i] - l[imin] > l[ibest] - l[jbest]:
  ibest = i
  jbest = j
